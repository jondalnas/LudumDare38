package com.Jonas.LD38.Level.Tile;

import com.Jonas.LD38.Entity.Entity;
import com.Jonas.LD38.Grapics.Renderer;

public class Tile {
	public int x, y;
	public int color = 0xFF00FF;
	public int weight = 1;
	
	public Zones zone = Zones.none;
	
	public Tile(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	public void render(Renderer renderer) {
		renderer.setPixel(color, x, y);
		
		int pixel = renderer.getPixel(x, y);

		int r = (pixel>>16)&0xff;
		int g = (pixel>>8)&0xff;
		int b = (pixel>>0)&0xff;

		r *= 0.8;
		g *= 0.8;
		b *= 0.8;
		
		pixel = (r<<16)|(g<<8)|b;
		
		int pixel2 = (zone.color*0.2);
		
		renderer.setPixel((int) (pixel+pixel2), x, y);
	}

	public boolean collides(Entity e) {
		return false;
	}
}